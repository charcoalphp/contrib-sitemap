{
    "type": "library",
    "name": "charcoal/contrib-sitemap",
    "description": "Charcoal service for generating a sitemap.",
    "keywords": [
        "charcoal",
        "sitemap"
    ],
    "homepage": "https://charcoalphp.github.io/contrib-sitemap/",
    "license": "MIT",
    "authors": [
        {
            "name": "Locomotive",
            "homepage": "https://locomotive.ca"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "charcoal/app": "^4.0",
        "charcoal/core": "^4.0",
        "charcoal/factory": "^4.0",
        "charcoal/object": "^4.0",
        "charcoal/translator": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "php-coveralls/php-coveralls": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Charcoal\\": "src/Charcoal/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Charcoal\\Tests\\": "tests/Charcoal/"
        }
    },
    "replace": {
        "locomotivemtl/charcoal-contrib-sitemap": "*"
    },
    "scripts": {
        "test": [
            "@tests"
        ],
        "tests": [
            "@phplint",
            "@phpcs"
        ],
        "phplint": "find {src,tests} -name '*.php' -print0 | xargs -0 -n1 -P8 php -l | grep -v '^No syntax errors detected'; test $? -eq 1",
        "phpcs": "php vendor/bin/phpcs -ps --colors src/ tests/",
        "phpcbf": "php vendor/bin/phpcbf -ps --colors src/ tests/",
        "phpunit": "php vendor/bin/phpunit --coverage-text"
    }
}
